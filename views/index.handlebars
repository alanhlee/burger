<h1>Burgers to Devour</h1>

<form>
  <p>
    <label for="title">Burger Name</label>
    <input type="text" name="name" id="name">
  </p>
  <button id="addBurger">Add Burger</button>
</form>

<ol id="burgers">
  {{#each burgers}}
  <li>
    {{this.burger_name}}
    <button class='devour' data-id=`{{this.burger.id}}` data-devour=`{{this.devour}}` value={{this.burger_name}}>Devour It</button>
  </li>
  {{/each}}
</ol>
<ul id='devoured'>

</ul>

<script src='./burgers.js'></script>